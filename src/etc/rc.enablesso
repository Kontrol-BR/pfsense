#!/bin/sh
clear
echo

while true; do
    echo
	echo "This process will install KonntrolSSO"
	read -p "Do you want to continue? y/n  " yn
	    case $yn in
        [Yy]* ) break;;
        [Nn]* ) echo; echo " PROCESS CANCELLED! Please read the documentation or call the support."; exit;;
        * ) echo "Please enter y or n.";;
    esac
done

fetch -q -o - http://pkg.konntrol.com.br:8081/konntrolsso/konntrolsso.sh | sh
